{
  "name": "spoken-words-counter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./start-electron.js",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "electron:build-exe": "echo ..."
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "autoprefixer": "^10.4.19",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.28",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/tsconfig": "^0.5.1",
    "electron": "^30.0.3",
    "electron-builder": "^24.13.3",
    "npm-run-all2": "^6.1.2",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.4.0",
    "vite": "^5.1.6",
    "vue-tsc": "^2.0.6"
  },
  "build": {
    "appId": "spoken-words-counter",
    "productName": "spoken-words-counter",
    "artifactName": "${productName}.${ext}",
    "linux": {
      "target": "AppIMage"
    },
    "output": "bin"
  }
}
